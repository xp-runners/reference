#!/bin/sh

php=${XP_RT-php}
tz=${TZ-UTC}
use=${USE_XP-.}

# Export environment
XP_EXE=$0
XP_COMMAND=run
XP_MODEL=slim
XP_VERSION=@VERSION@

# Extract entry
entry="$(mktemp -d)"
sed '1,/^EOF;$/d' $0 > "$entry/class-main.php"

# Run PHP
trap 'echo' HUP INT TERM STOP
$php -C -q -d include_path="$use" -d date.timezone="$tz" "$entry/class-main.php" "$@" &
pid=$!
wait $pid
result=$?

# Cleanup entry point
rm -rf "$entry"
exit $result

EOF;
