#!/bin/sh

php=${XP_RT-php}
tz=${TZ-UTC}
use=${USE_XP-.}

# Export environment
XP_EXE=$0
XP_COMMAND=run
XP_MODEL=slim
XP_VERSION=@VERSION@

# Extract entry
entry=$(mktemp -d)/class-main.php
sed '0,/^EOF;$/d' $0 > $entry

# Run PHP
$php -C -q -d include_path="$use" -d date.timezone="$tz" $entry "$@"
exit=$?

# Cleanup entry point
rm -rf $(dirname $entry)
exit $exit

EOF;
